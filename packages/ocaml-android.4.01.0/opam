  "make" "ANDROID_NDK=%{lib}%/android-ndk" "OCAML_SRC=%{lib}%/ocaml-src"
         "ANDROID_PREFIX=%{prefix}%/arm-linux-androideabi"
         "ANDROID_BINDIR=%{bin}%"
]]
remove: [[ "./remove.sh" "%{prefix}%" ]]
